<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/view3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/normal_size_16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_playlist"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center|bottom"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/image_playlist_shadow"
            android:layout_width="120dp"
            android:layout_height="@dimen/big_size_24dp"
            android:layout_gravity="center|bottom"
            android:background="@color/black_trans80"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_in_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="26dp"
            android:text="@string/playlist"
            android:textColor="@color/white" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_8dp"
        android:layout_marginEnd="@dimen/normal_size_16dp"
        android:layout_marginBottom="@dimen/normal_size_16dp"
        android:textColor="@color/black_three"
        android:textSize="@dimen/normal_size_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_under_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        tools:text="32 videos series" />

    <TextView
        android:id="@+id/tv_under_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_size_16dp"
        android:textColor="@color/black_under"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        tools:text="32 videos series" />


</androidx.constraintlayout.widget.ConstraintLayout>